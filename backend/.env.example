# ==============================================
# RELYR BACKEND - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# --------------------------
# Application
# --------------------------
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# --------------------------
# Database (PostgreSQL)
# --------------------------
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_postgres_password
DATABASE_NAME=relyr_dev
DATABASE_SSL=false

# Full connection string (alternative to individual vars)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/relyr_dev

# --------------------------
# Redis
# --------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# REDIS_URL=redis://localhost:6379

# --------------------------
# JWT Authentication
# --------------------------
JWT_SECRET=change-this-to-a-super-secret-key-min-32-chars
JWT_EXPIRY=1h
JWT_REFRESH_SECRET=change-this-to-another-super-secret-key
JWT_REFRESH_EXPIRY=7d

# --------------------------
# Anchor BaaS Integration
# --------------------------
ANCHOR_API_KEY=sk_sandbox_xxxxxxxxxxxxx
ANCHOR_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx
ANCHOR_BASE_URL=https://api.sandbox.getanchor.co/v1

# --------------------------
# Circle USDC Integration
# --------------------------
CIRCLE_API_KEY=SAND_API_KEY:xxxxxxxxxxxxxxxx
CIRCLE_ENTITY_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
CIRCLE_WEBHOOK_PUBLIC_KEY="-----BEGIN PGP PUBLIC KEY BLOCK-----\n...\n-----END PGP PUBLIC KEY BLOCK-----"
CIRCLE_BASE_URL=https://api-sandbox.circle.com/v1

# --------------------------
# Paystack Integration
# --------------------------
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxx
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
PAYSTACK_CALLBACK_URL=http://localhost:3000/webhooks/paystack/callback

# --------------------------
# Mono Open Banking
# --------------------------
MONO_SECRET_KEY=test_sk_xxxxxxxxxxxxx
MONO_PUBLIC_KEY=test_pk_xxxxxxxxxxxxx
MONO_BASE_URL=https://api.withmono.com

# --------------------------
# Smile Identity (KYC)
# --------------------------
SMILE_PARTNER_ID=1234
SMILE_API_KEY=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
SMILE_CALLBACK_URL=http://localhost:3000/webhooks/smile
SMILE_BASE_URL=https://testapi.smileidentity.com/v1

# --------------------------
# Polygon/Blockchain
# --------------------------
POLYGON_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_TESTNET_RPC_URL=https://rpc-mumbai.maticvigil.com
USDC_CONTRACT_ADDRESS=0x9999f7Fea5938fD3b1E26A12c3f2fb024e194f97
MASTER_ENCRYPTION_KEY=change-this-to-32-byte-hex-string-for-encrypting-private-keys

# --------------------------
# AWS (for production)
# --------------------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_KYC=relyr-kyc-documents-dev
S3_BUCKET_RECEIPTS=relyr-receipts-dev

# --------------------------
# Email (AWS SES)
# --------------------------
SES_FROM_EMAIL=no-reply@relyr.app
SES_REGION=us-east-1
SUPPORT_EMAIL=hi@relyr.app

# --------------------------
# Monitoring & Logging
# --------------------------
SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/xxxxx
LOG_LEVEL=debug

# --------------------------
# Rate Limiting
# --------------------------
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# --------------------------
# CORS
# --------------------------
CORS_ORIGIN=http://localhost:19006,http://localhost:3001
CORS_CREDENTIALS=true

# --------------------------
# Transaction Limits (NGN)
# --------------------------
MIN_TRANSACTION_AMOUNT=100
MAX_TRANSACTION_AMOUNT=1000000
DAILY_TRANSACTION_LIMIT=5000000

# --------------------------
# Frontend URLs
# --------------------------
FRONTEND_URL=http://localhost:19006
ADMIN_URL=http://localhost:3001
